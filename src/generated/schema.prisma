generator client {
  provider = "prisma-client-js"
  output   = "../src/generated"
}

datasource db {
  provider = "sqlite"
}

model Teacher {
  id         String   @id @default(cuid())
  name       String
  department String?
  email      String?  @unique
  shift      Shift    @default(MORNING)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  loads      Load[]
}

model Subject {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  color     String   @default("#0f766e")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  loads     Load[]
}

model Class {
  id         String   @id @default(cuid())
  gradeLevel String
  section    String
  adviser    String
  shift      Shift    @default(MORNING)
  color      String   @default("#1d4ed8")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  loads      Load[]
}

model Load {
  id        String    @id @default(cuid())
  teacherId String
  subjectId String
  classId   String
  shift     Shift
  startTime String
  endTime   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  subject   Subject   @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  teacher   Teacher   @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  class     Class     @relation(fields: [classId], references: [id], onDelete: Cascade)
  days      LoadDay[]
}

model LoadDay {
  id      String  @id @default(cuid())
  loadId  String
  weekday Weekday
  load    Load    @relation(fields: [loadId], references: [id], onDelete: Cascade)

  @@unique([loadId, weekday])
}

enum Shift {
  MORNING
  AFTERNOON
}

enum Weekday {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
}
